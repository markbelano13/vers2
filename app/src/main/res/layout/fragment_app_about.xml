<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
    tools:context=".AppAboutFrag">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notificationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="4"
            android:fontFamily="@font/nunito_sans"
            android:text="About Application"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeAppAbout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center | right"
            android:layout_marginRight="20dp"
            android:background="@drawable/grey_btn_ripple_circle"
            android:src="@drawable/ic_expand_down" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/background_frame"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="110dp"
                        android:maxHeight="110dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/stay_alert_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_sans"
                            android:text="Stay Alert: Driver Drowsiness Detection"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_sans"
                            android:text="StayAlert Team, 2024"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                        <ImageButton
                            android:id="@+id/gitAppAbout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/grey_btn_ripple_circle"
                            android:src="@drawable/ic_github_mark" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="About StayAlert"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="\tStayAlert is your copilot for safer journeys. Our innovative driver drowsiness detection system utilizes the powerful YOLOv5 algorithm to continuously analyze your facial features, specifically focusing on eye and mouth movements.\n\tBy monitoring these key indicators, StayAlert can effectively detect signs of drowsiness before they lead to a critical situation."
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="How it Works"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="\t\t\u2022Real-Time Analysis: The app runs in the background, discreetly monitoring your face throughout your drive.\n\t\t\u2022YOLOv5 Power: This cutting-edge algorithm allows for accurate detection of facial features in real-time.\n\t\t\u2022Focus on Drowsiness: Eye closure, blinking patterns, and yawning are all analyzed to assess your alertness.\n\t\t\u2022Timely Alerts: If signs of drowsiness are detected, you'll receive immediate audio or visual alerts to get you back on track."
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/texstView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Limitations to Consider:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tsextView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="It's important to be aware that while StayAlert is a valuable tool for promoting alertness,  technology has limitations. Here are some factors to keep in mind:\n\t\t\u2022External Conditions: Bright light, sunglasses, or wearing a mask can sometimes affect the accuracy of facial feature detection.\n\t\t\u2022Individual Differences: Drowsiness can manifest differently in various people. StayAlert may not capture all signs of fatigue in every user.\n\t\t\u2022Not a Substitute for Awareness: No technology can replace your own judgment behind the wheel. You should always prioritize getting enough rest before driving and pull over if you feel drowsy at any time."
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tsexstView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="StayAlert is committed to:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stsextView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="\t\t\u2022Enhancing road safety by reducing drowsy driving incidents.\n\t\t\u2022Providing peace of mind for drivers and passengers alike, with the understanding that it's one tool in your safety toolbox.\n\t\t\u2022Promoting a more responsible driving experience by combining innovative technology with your own awareness."
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>